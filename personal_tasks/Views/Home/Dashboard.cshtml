@{
    ViewData["Title"] = "功能表";
}
<!-- 以下功能待更新 -->
<div class="container">
    
    <div class="container">

        <!-- 新增：搜尋橫條與任務新增功能橫條 -->
        <div class="row mb-3">
            <div class="col-md-6">
                <form class="d-flex" method="get" action="@Url.Action("TaskList", "Task")">
                    <input class="form-control me-2" type="search" name="keyword" placeholder="請輸入關鍵字搜尋" aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">搜尋</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "Task")" class="btn btn-primary">新增任務</a>
            </div>
        </div>
                
        <!-- 新增：任務類別按鈕橫條 -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="btn-group" role="group" aria-label="任務類別">
                    <button type="button" class="btn btn-secondary">全部</button>
                    <button type="button" class="btn btn-secondary">人事</button>
                    <button type="button" class="btn btn-secondary">會計</button>
                    <button type="button" class="btn btn-secondary">開發</button>
                    <button type="button" class="btn btn-secondary">測試</button>
                </div>
            </div>
        </div>

        <!-- 新增：分頁顯示任務列表頁數 -->
        <div class="row mb-3">
            <div class="col-md-6">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- 新增：任務列表 -->
        <div class="row" id="taskListSection">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>任務類別</th>
                            <th>任務標題</th>
                            <th>內容摘要</th>
                            <th>截止日期</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>人事</td>
                            <td>功能待更新</td>
                            <td>功能待更新</td>
                            <td>2025-2-01</td>
                        </tr>
                        <tr>
                            <td>會計</td>
                            <td>功能待更新</td>
                            <td>功能待更新</td>
                            <td>2025-2-05</td>
                        </tr>
                        <tr>
                            <td>開發</td>
                            <td>功能待更新</td>
                            <td>功能待更新</td>
                            <td>2025-2-20</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
