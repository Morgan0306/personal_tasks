@model IEnumerable<personal_tasks.Models.Users>

@{
    ViewData["Title"] = "帳號管理";
}

<div class="container mt-4">
    <h2 class="mb-4">帳號管理</h2>

    <!-- 新增帳號按鈕 -->
    <div class="mb-3">
        <a href="@Url.Action("Register", "Account")" class="btn btn-success">新增帳號</a>
    </div>

    <!-- 帳號清單表格 -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>帳號</th>
                <th>名字</th>
                <th>Email</th>
                <th>部門</th>
                <th>角色</th>
                <th>狀態</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Department != null)
                            {
                                @user.Department.DepartmentName
                            }
                            else
                            {
                                <span class="text-muted">未指定</span>
                            }
                        </td>
                        <td>
                            @if (user.Role != null)
                            {
                                @user.Role.RoleName
                            }
                            else
                            {
                                @user.RoleId
                            }
                        </td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">啟用</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">停用</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditAccount", "Admin", new { id = user.UserID })" class="btn btn-sm btn-primary">編輯</a>
                            <a href="@Url.Action("DeleteAccount", "Admin", new { id = user.UserID })" class="btn btn-sm btn-danger" onclick="return confirm('確定刪除此帳號嗎？');">刪除</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">目前沒有帳號資料</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 可加入分頁控制（若有分頁需求） -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>
>
